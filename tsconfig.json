{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",         // Ensure you're using ESM modules
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
